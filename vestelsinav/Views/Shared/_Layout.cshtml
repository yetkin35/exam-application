<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VESTEL</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/png" href="../../favicon.png" />
    <script src="~/scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/modernizr-2.6.2.js"></script>
    <link href="~/scripts/StyleSheet.css" rel="stylesheet" />
    <script src="~/scripts/sweetalert2@8.js"></script>
    <link href="~/scripts/fontawesome.min.css" rel="stylesheet" />
    <script src="~/scripts/easytimer.min.js"></script>
    <script src="~/scripts/bootstrap-navbar-toggle.min.js"></script>
    <link href="~/scripts/bootstrap-navbar-toggle.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-inverse" style="border-radius:0px;">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sw-example-navbar-collapse-3" aria-expanded="false">
            <span class="sr-only">(toggle)</span>

            <span class="navbar-toggle-icon">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </span>
        </button>          
        
        <div class="collapse navbar-collapse" id="sw-example-navbar-collapse-3">
            <div class="container-fluid" style="padding-left:20%; padding-right:20%;">
                <div class="navbar-left logoNav">
                    <a href="/"><img src="../../image/vestel-kirmizi-logo-buyuk.png" href class="logo" /></a>
                </div>
                @if (Request.IsAuthenticated)
            {
                if (Request.Cookies["admin"] != null)
                {
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("SINAV EKLE/ÇIKAR", "konu", "Admin")</li>
                            <li>@Html.ActionLink("SORU EKLE/ÇIKAR", "soru", "Admin")</li>
                            <li>@Html.ActionLink("SINAV SONUÇLARI", "SonucAl", "Admin")</li>
                            <li>@Html.ActionLink("ÇIKIŞ YAP", "Cikis", "Home")</li>
                        </ul>
                    }
                    else
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("EĞİTİMLER", "Sinavlar", "Home")</li>
                            <li>@Html.ActionLink("SONUÇLARIM", "KullaniciSonuc", "Home")</li>
                            <li>@Html.ActionLink("ÇIKIŞ YAP", "Cikis", "Home")</li>
                        </ul>
                    }
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("ANASAYFA", "Index", "Home")</li>
                        <li>@Html.ActionLink("ADMİN GİRİŞİ", "admingiris", "Admin")</li>
                        <li>@Html.ActionLink("GİRİŞ", "Giris", "Home")</li>
                        <li>@Html.ActionLink("KAYIT OL", "KayitOl", "Home")</li>
                    </ul>
                }
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>

</html>