@{
    Layout = "../Shared/_Layout.cshtml";
}
<div class="container">
   <div class="row" style="margin-top: 10%;">
        <div class="col-xs-3"></div>
        <div class="col-xs-6">
            <form method="POST">
                <h3 class="loginTitle"><b>VESTEL SINAV GİRİŞ EKRANI</b></h3>
                <hr />
                <div class="form-group">
                    <label>E-mail  :</label>
                    <input class="form-control widthControlInput" required="required" type="email" name="email">
                    <small class="form-text text-muted" style="color:red;">@ViewBag.hataMesajı</small><br />
                    <label>Şifre :</label>
                    <input class="form-control widthControlInput" required="required" type="password" name="sifre">
                </div>
                <hr/>
                <div class="text-center"><button class="btn btn-light widthControlButton">GİR</button></div>
            </form>
        </div>
        <div class="col-xs-3"></div>
    </div>
</div>