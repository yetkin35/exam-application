@{
    Layout = "../Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row" style="margin-top: 10%;">
        <div class="col-xs-3"></div>
        <div class="col-xs-6">
            <form method="POST">
                <h3 class="loginTitle"><b>VESTEL SINAV KULLANICI KAYIT EKRANI</b></h3>
                <hr />
                <div class="form-group">
                    <label>Email :</label>
                    <input class="form-control widthControlInput" required="required" type="email" name="email">
                    <label>Şifre :</label>
                    <input class="form-control widthControlInput" required="required" type="password" name="sifre">
                    <small class="form-text text-muted" style="color:red;">@ViewBag.emailHata</small><br />
                    <label>İsim :</label>
                    <input class="form-control widthControlInput" required="required" name="isim">
                    <label>Soyisim :</label>
                    <input class="form-control widthControlInput" required="required"  name="soyisim">
                </div>
                <hr />
                <div class="text-center"><button class="btn btn-light widthControlButton">KAYIT OL</button></div>
            </form>
        </div>
        <div class="col-xs-3"></div>
    </div>
</div>