@model IEnumerable<vestelsinav.Models.Database_Models.Egitim>

@{
    Layout = "../Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <h3 align="center" style="padding: 10% 0 5% 0;">HOŞGELDİNİZ <i style="color:red;">@ViewBag.isim @ViewBag.soyisim</i>,GİREBİLECEĞİNİZ SINAVLAR</h3>
    </div>
    <div class="row">
        <div class="col-sm-8 col-sm-push-2">
            <table class="table table-striped table-bordered">
                <thead class="thead">
                    <tr>
                        <th class="text-center" scope="col">#</th>
                        <th class="text-center" scope="col">Eğitimin Başlığı</th>
                        <th class="text-center" scope="col">Soru Sayısı</th>
                        <th class="text-center" scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td align="center" style="padding-top: 2%;" scope="row"><b>@i</b></td>
                                <td align="center" style="padding-top: 2%;">@item.konuBasligi</td>
                                <td align="center" style="padding-top: 2%;">@item.soruSayisi</td>
                                <td align="center">@Html.ActionLink("SINAVA BAŞLA","Onay", "Home", new { egitimID = @item.egitimID, soruSayisi = @item.soruSayisi }, new { @class = "btn btn-primary" })</td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="col-sm-2 col-sm-pull-8">
        </div>
    </div>
</div>